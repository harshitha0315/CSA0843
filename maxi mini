n=int(input("enter no.of elements:"))
for i in range(1,n+1):
    a=int(input('enter the elemnts:'))
x=int(input("enter the m value:"))
y=int(input("enter the n value:"))
print('the Mth maximum element is:',a[n-(x-1)],)
print('the Nth minimum element is:',a[y],)
sum=a[n-(x-1)]+a[y]
diff=a[n-(x-1)]-a[y]
print('sum=',sum,)
print('diff=',diff,)